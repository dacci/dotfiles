{
  "Java Project": {
    "prefix": "java",
    "body": [
      "plugins {",
      "  id 'java'",
      "  id 'jacoco'",
      "  id 'application'",
      "  id 'com.diffplug.spotless' version '${2:5.14.0}'",
      "  id 'net.ltgt.errorprone' version '${3:2.0.1}'",
      "}",
      "",
      "sourceCompatibility = '11'",
      "",
      "configurations {",
      "  compileOnly {",
      "    extendsFrom annotationProcessor",
      "  }",
      "}",
      "",
      "repositories {",
      "  mavenCentral()",
      "}",
      "",
      "dependencies {",
      "  implementation platform('org.junit:junit-bom:${4:latest.release}')",
      "$0",
      "  compileOnly 'org.projectlombok:lombok:${5:latest.release}'",
      "  annotationProcessor 'org.projectlombok:lombok:${5:latest.release}'",
      "",
      "  implementation 'org.slf4j:slf4j-api:${6:1.7.+}'",
      "  runtimeOnly('ch.qos.logback:logback-classic:${7:1.2.+}') {",
      "    exclude group: 'com.sun.mail', module: 'javax.mail'",
      "  }",
      "",
      "  testImplementation 'org.junit.jupiter:junit-jupiter-params'",
      "  testImplementation 'org.hamcrest:hamcrest:latest.release'",
      "  testImplementation 'org.mockito:mockito-junit-jupiter:latest.release'",
      "  testRuntimeOnly 'org.junit.jupiter:junit-jupiter-engine'",
      "",
      "  errorprone 'com.google.errorprone:error_prone_core:2.4.+'",
      "}",
      "",
      "spotless {",
      "  java {",
      "    googleJavaFormat('${8:1.10.0}')",
      "    importOrder 'java', 'javax', 'org', 'com', ''",
      "  }",
      "}",
      "",
      "tasks.withType(JavaCompile).configureEach {",
      "  options.encoding = 'UTF-8'",
      "  options.errorprone.disableWarningsInGeneratedCode = true",
      "}",
      "",
      "test {",
      "  useJUnitPlatform()",
      "  finalizedBy jacocoTestReport",
      "}",
      "",
      "jacocoTestReport {",
      "  dependsOn test",
      "}",
      "",
      "application {",
      "  mainClass = '$1'",
      "}"
    ]
  },
  "AWS SDK": {
    "prefix": "aws",
    "body": "implementation platform('software.amazon.awssdk:bom:${1:latest.release}')$0"
  },
  "AWS SDK v1": {
    "prefix": "aws",
    "body": "implementation platform('com.amazonaws:aws-java-sdk-bom:${1:latest.release}')$0"
  }
}
