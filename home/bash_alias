# Common aliases
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
alias ls='ls -Fh --color=auto'
alias ll='ls -l'
alias lsa='ls -a'
alias lla="ll -a"
alias ssh-agent-start='eval `ssh-agent` && ssh-add'
alias grep='grep --color=auto'
alias pcregrep='pcregrep --color=auto'
alias manj='LANG=ja_JP.UTF-8 man'
alias vi=vim
alias view='vim -R'

OS="`uname -s`"

if [ "$OS" = Linux ]; then
  alias lsz='ls -Z'
fi
