# Zsh specific aliases
alias rm='nocorrect rm -i'    # no spelling correction on mv
alias mv='nocorrect mv -i'    # no spelling correction on mv
alias cp='nocorrect cp -i'    # no spelling correction on cp
alias mkdir='nocorrect mkdir' # no spelling correction on mkdir
alias locate='noglob locate'
alias wget='noglob wget'
alias yum='noglob yum'
alias zmv='noglob zmv'

alias cpplint-all='cpplint.py **/*.(h|cc|cpp)~res/**'
alias clang-format-all='clang-format -i **/*.(h|cc|cpp)~res/**'
